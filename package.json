{
  "name": "trilogy",
  "version": "1.2.0",
  "description": "No-hassle SQLite with a document store style API.",
  "main": "dist/trilogy.js",
  "module": "dist/trilogy.mjs",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "rimraf \"dist/**\" && rollup -c && cpy readme.md docs && npm run types",
    "watch": "npm run types && rimraf \"dist/**\" && rollup -c -w",
    "types": "cpy \"types/**/*\" dist",
    "pretest": "npm run build",
    "test": "ava",
    "lint": "eslint src tests",
    "docs": "cpy readme.md docs && docsify serve docs",
    "changelog": "standard-changelog -i changelog.md -o changelog.md",
    "prepublish": "npm test",
    "commit": "git-cz"
  },
  "repository": "https://github.com/citycide/trilogy",
  "keywords": [
    "knex",
    "model",
    "schema",
    "sqlite",
    "sql.js",
    "storage",
    "database",
    "electron",
    "mongoose",
    "document"
  ],
  "author": "citycide",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/citycide/trilogy/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://citycide.github.io/trilogy",
  "dependencies": {
    "component-type": "^1.2.1",
    "generic-pool": "^3.1.7",
    "knex": "^0.13.0",
    "osom": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "commitizen": "^2.9.6",
    "cpy-cli": "^1.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "docsify-cli": "^4.1.8",
    "eslint": "^4.1.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prefer-let": "^1.0.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-watch": "^4.0.0",
    "sql.js": "^0.4.0",
    "sqlite3": "^3.1.8",
    "standard-changelog": "1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4.7.0"
          },
          "loose": true
        }
      ],
      "stage-0"
    ],
    "plugins": [
      "external-helpers",
      "add-module-exports"
    ]
  }
}
