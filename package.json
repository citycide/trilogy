{
  "name": "trilogy",
  "version": "0.7.0",
  "description": "100% pure JS SQLite, built on Knex & SQL.js",
  "main": "dist/trilogy.js",
  "jsnext:main": "dist/trilogy.mjs",
  "scripts": {
    "prebuild": "eslint lib test",
    "build": "rollup -c && npm run docs",
    "watch": "rollup -c -w",
    "pretest": "npm run build",
    "test": "mocha",
    "flow": "flow check",
    "docs": "jsdoc -c .jsdoc.json",
    "pages": "git subtree split --prefix docs -b gh-pages && git push -f origin gh-pages:gh-pages && git branch -D gh-pages",
    "prepublish": "npm test",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/citycide/trilogy.git"
  },
  "keywords": [
    "es6",
    "es2015",
    "es2016",
    "modules",
    "rollup",
    "knex",
    "sqlite",
    "sql.js"
  ],
  "author": "citycide",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/citycide/trilogy/issues"
  },
  "files": [
    "lib",
    "dist",
    "flow"
  ],
  "homepage": "https://github.com/citycide/trilogy#readme",
  "dependencies": {
    "arify": "^0.6.0",
    "bluebird": "^3.4.1",
    "fs-jetpack": "^0.9.2",
    "knex": "^0.11.7",
    "lodash": "^4.13.1",
    "sql.js": "^0.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.0",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "babel-runtime": "^6.11.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "commitizen": "^2.8.5",
    "cz-conventional-changelog": "^1.1.6",
    "docdash": "^0.4.0",
    "eslint": "^3.0.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flowtype": "^2.4.0",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-standard": "^1.3.2",
    "flow-bin": "^0.30.0",
    "iflow-bluebird": "^1.1.18",
    "iflow-lodash": "^1.1.23",
    "jsdoc": "^3.4.0",
    "jsdoc-babel": "^0.2.1",
    "jsdoc-strip-async-await": "^0.1.0",
    "mocha": "^2.5.3",
    "rollup": "^0.34.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-watch": "^2.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
